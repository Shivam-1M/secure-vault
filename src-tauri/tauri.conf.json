{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "secure-vault",
  "version": "0.1.0",
  "identifier": "com.shivam.secure-vault",
  "build": {
    "beforeDevCommand": "npm run dev --prefix src",
    "beforeBuildCommand": "npm run build --prefix src",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "secure-vault",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
